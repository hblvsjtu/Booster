{
    "name": "booster_lib_js",
    "version": "0.0.1",
    "description": "一个快速启动的环境",
    "main": "dist/lib_js.umd.js",
    "module": "dist/lib_js.esm.js",
    "scripts": {
        "start": "npm run test && webpack-dev-server --open --config ./build/webpack.dev.js",
        "build": "cross-env NODE_ENV=production && rollup -c rollup.config.js",
        "lint": "npx eslint",
        "fix": "npx eslint --fix",
        "test": "jest",
        "pretty": "pretty-quick",
        "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md && git commit --amend --no-edit",
        "commit": "git-cz"
    },
    "keywords": [
        "quick",
        "environment"
    ],
    "author": "冰红茶",
    "license": "MIT",
    "dependencies": {
        "lodash-es": "^4.17.15"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-stage-2": "^7.8.3",
        "@babel/runtime": "^7.11.2",
        "@babel/runtime-corejs3": "^7.11.2",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "commitizen": "^4.2.1",
        "conventional-changelog-cli": "^2.1.0",
        "cross-env": "^7.0.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.2.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.0.1",
        "lint-staged": "^8.0.0",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.0.2",
        "rollup": "^2.29.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "maxHeaderWidth": 100,
            "maxLineWidth": 100,
            "defaultType": "",
            "defaultScope": "",
            "defaultSubject": "",
            "defaultBody": "",
            "defaultIssues": "",
            "types": {
                "feat": {
                    "description": "A new feature",
                    "title": "Features"
                },
                "fix": {
                    "description": "A new fix",
                    "title": "Features"
                },
                "docs": {
                    "description": "A new docs",
                    "title": "Features"
                },
                "style": {
                    "description": "A new style",
                    "title": "Features"
                },
                "refactor": {
                    "description": "A new refactor",
                    "title": "refactor"
                },
                "test": {
                    "description": "A new test",
                    "title": "test"
                },
                "revert": {
                    "description": "A new revert",
                    "title": "revert"
                },
                "config": {
                    "description": "A new config",
                    "title": "config"
                },
                "chore": {
                    "description": "A new chore",
                    "title": "chore"
                }
            }
        }
    },
    "lint-staged": {
        "{src,test}/**/*.js": [
            "eslint",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged",
            "pre-push": "npm run test"
        }
    }
}
