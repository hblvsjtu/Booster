{
    "name": "booster_vue3_ts",
    "version": "0.1.0",
    "description": "一个快速启动的环境",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "build-lib": "vue-cli-service build --target lib --inline-vue --name",
        "test:unit": "vue-cli-service test:unit",
        "test:e2e": "vue-cli-service test:e2e",
        "lint": "vue-cli-service lint",
        "pretty": "pretty-quick",
        "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md && git commit --amend --no-edit",
        "commit": "git-cz"
    },
    "dependencies": {
        "vue": "^3.0.0",
        "vue-class-component": "^8.0.0-0",
        "vue-router": "^4.0.0-0",
        "vuex": "^4.0.0-0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.19",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "@vue/cli-plugin-e2e-cypress": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-plugin-unit-jest": "~4.5.0",
        "@vue/cli-plugin-vuex": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0",
        "@vue/eslint-config-airbnb": "^5.0.2",
        "@vue/eslint-config-typescript": "^7.0.0",
        "@vue/test-utils": "^2.0.0-0",
        "commitizen": "^4.2.1",
        "conventional-changelog-cli": "^2.1.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^6.7.2",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^7.0.0",
        "husky": "^4.3.0",
        "less": "^3.0.4",
        "less-loader": "^5.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.0.2",
        "typescript": "~4.1.5",
        "vue-jest": "^5.0.0-0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "jest": {
        "preset": "@vue/cli-plugin-unit-jest/presets/typescript",
        "transform": {
            "^.+\\.vue$": "vue-jest"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "maxHeaderWidth": 100,
            "maxLineWidth": 100,
            "defaultType": "",
            "defaultScope": "",
            "defaultSubject": "",
            "defaultBody": "",
            "defaultIssues": "",
            "types": {
                "feat": {
                    "description": "A new feature",
                    "title": "Features"
                },
                "fix": {
                    "description": "A new fix",
                    "title": "Features"
                },
                "docs": {
                    "description": "A new docs",
                    "title": "Features"
                },
                "style": {
                    "description": "A new style",
                    "title": "Features"
                },
                "refactor": {
                    "description": "A new refactor",
                    "title": "refactor"
                },
                "test": {
                    "description": "A new test",
                    "title": "test"
                },
                "revert": {
                    "description": "A new revert",
                    "title": "revert"
                },
                "config": {
                    "description": "A new config",
                    "title": "config"
                },
                "chore": {
                    "description": "A new chore",
                    "title": "chore"
                }
            }
        }
    },
    "lint-staged": {
        "{src,test}/**/*.js": [
            "eslint",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged",
            "pre-push": "npm run test:unit"
        }
    }
}
